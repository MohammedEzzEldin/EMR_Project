@model GP_EMR_Project.Models.Medical_Organization

@{
    ViewBag.Title = "Register_Hospital";
}

<div>
    <!-- hospital registration -->
    <div class="hospital_register_con" id="tab1-content">
        <div class="container ">
            <div class="row">

                <div class="col-md-7">
                    <h1 class="text-left">Join Our Health Care Community Now:</h1>
                    <p class="text-left">---------------------------------------------------------------------------------------------------------------</p>
                </div>



                <div class="col-md-5 hos">

                    <div class="row">
                        <div class="col-md">
                            <h3 class="text-center">Registration Form</h3>
                        </div>
                    </div>
                    <hr color="#FFFFFF" />

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row form_con ">
                            @Html.Label("Organizartion Name", htmlAttributes: new { @class = "col - md - 3 Label" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Medical_Org_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Type the Name" } })
                                @Html.ValidationMessageFor(model => model.Medical_Org_Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.Medical_Org_Id)
                        <input type="submit" class="btn btn-primary" value="Register" />
                    }


                </div>

            </div>
        </div>
    </div>
    <!--end hospital rigitration-->
</div>