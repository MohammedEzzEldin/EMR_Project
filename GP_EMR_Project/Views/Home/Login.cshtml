@model GP_EMR_Project.Models.User

@{
    ViewBag.Title = "Login";
}

<div>
    <!-- hospital registration -->
    <div class="hospital_register_con" id="tab1-content">
        <div class="container ">
            <div class="row">

                <div class="col-md-7">
                    <h1 class="text-left">Join Our Health Care Community Now</h1>
                </div>



                <div class="col-md-5 hos">

                    <div class="row">
                        <div class="col-md">
                            <h3 class="text-center">Login Form</h3>
                        </div>
                    </div>
                    <hr color="#FFFFFF" />

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row form_con ">
                            @Html.Label("User Name", htmlAttributes: new { @class = "col - md - 3 Label" })
                            <div class="col-md-9">
                                @Html.Editor("username", new { htmlAttributes = new { @class = "form-control", type = "email", required = true, placeholder = "Type the User Name" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row form_con ">
                            @Html.Label("Password", htmlAttributes: new { @class = "col - md - 3 Label" })
                            <div class="col-md-9">
                                @Html.Editor("password", new { htmlAttributes = new { @class = "form-control", type = "password", maxlength = "15", required = true, placeholder = "Type the Password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>      
                        <div class="text-center">
                            @Html.ActionLink("Register Now", "Register", "Home") &nbsp;
                            @Html.ActionLink("Forget Password", "ForgetPassword", "Home")
                        </div>

                        <input type="submit" class="btn btn-primary" value="Login" />
                    }


                </div>
               
            </div>
        </div>
    </div>
    <!--end hospital rigitration-->
</div>

