@model IEnumerable<GP_EMR_Project.Models.User>
@{
    ViewBag.Title = "Home Page";
}

<!-- start carousel -->

<div id="carouselExampleSlidesOnly" class="carousel slide container" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/MainPageBootstrap/pic/WeCare-Logo-V2_150ppi.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/MainPageBootstrap/pic/allathomehealthcare-org2.png" alt="Second slide">
        </div>
    </div>
    <hr />
</div>

<!-- end carousel -->
<!-- start carousel -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 text-center text-success"><h3>The Best Doctors</h3></div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="owl-carousel owl-theme">
            @foreach (var item in Model)
            {
                if(item.User_Type == 3)
                {
                    if(item.Person.Doctor.Medium_Rate > 4.5) {
            <div class="item">
                <div class="card">
                    @{
                        var src = "";
                        try
                        {
                            src = item.Photo_Url.Split(' ')[0];
                        }
                        catch (Exception ex) { src = "~/Content/MainPageBootstrap/pic/c3-healthcare-logo-md.png"; }
                    }
                    <img src="@Url.Content(src)" alt="doctor img" class="card-img-top nav-link" />
                    <div class="card-body "><h3>@item.Person.First_Name @item.Person.Last_Name</h3></div>

                </div>
            </div>
                                }
                            }
                        }

        </div>

    </div>

</div>
<br />
<!-- end carousel -->

<div class="content text-center ">

    <div class="container">
        <h1><span>The Highest Rated</span> Hospitals</h1>
        <div class="row">
                            @foreach (var item in Model)
                            {
                                if (item.User_Type == 2)
                                {
                                    if (item.Status_Of_Account == 1)
                                    {
                                        if (item.Medical_Organization.Medium_Rate > 4.5)
                                        {
                                               <div class="col-lg-4 col-md-6 col-sm-12  ">
                                                   <a class=" hvr-border-fade nav-link " href="#">
                                                       @{
                                                           var src = "";
                                                           try
                                                           {
                                                               src = item.Photo_Url.Split(' ')[0];
                                                           }
                                                           catch(Exception ex) { src = "~/Content/MainPageBootstrap/pic/c3-healthcare-logo-md.png"; }
                                                       }
                                                       <img class="hospital" src="@Url.Content(src)" alt="hospital" />
                                                       <h3>@item.Medical_Organization.Medical_Org_Name</h3>
                                                   </a>
                                              </div>
                                        }
                                    }
                                }
                           }
              
            </div>

    </div>

</div>

