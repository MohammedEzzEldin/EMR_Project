@model GP_EMR_Project.Models.Patient

@{
    ViewBag.Title = "Death_Registration";
    Layout = "~/Views/Shared/_Doctor.cshtml";
}

<br />
<div class="contentt">
    <h3 class="text-center" style="color:grey">Death Registeration</h3>
    <hr />
    <br />
    <div class="container">
        <div class="table-responsive">
            <table class=" main-table table table-bordered table-hover text-center">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Patient_Id)

                    <tr>
                        <th>@Html.Label("Death Date")</th>
                        <th>@Html.Label("Death Reason")</th>
                    </tr>

                    <tr>
                        <td>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Death_Date, new { htmlAttributes = new { @class = "form-control", type = "date",required=true } })
                                @Html.ValidationMessageFor(model => model.Death_Date, "", new { @class = "text-danger" })
                            </div>
                        </td>

                        <td>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Reason_Death, new { htmlAttributes = new { @class = "form-control",required=true } })
                                @Html.ValidationMessageFor(model => model.Reason_Death, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>

                    <tr>
                    <div class="text-center">
                        <button type="submit" class="btn btn-info" style="width:100px">   Save   </button>
                        <button class="btn btn-info" style="text-align:center; width:150px" id="printButton" runat="server" Text="Print" OnClick="javascript:window.print();">Print</button>
                        <hr />
                    </div>
                    </tr>

                    <tr></tr>
                }
            </table>

            <hr />
        </div>
    </div>
</div>


