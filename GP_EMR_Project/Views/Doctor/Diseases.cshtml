@model GP_EMR_Project.Models.Disease

@{
    ViewBag.Title = "Diseases";
    Layout = "~/Views/Shared/_Doctor.cshtml";
}

<h2>Diseases</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
