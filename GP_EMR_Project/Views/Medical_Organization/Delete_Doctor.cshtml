@model GP_EMR_Project.Models.User

@{
    ViewBag.Title = "Delete_Doctor";
    Layout = "~/Views/Shared/_Medical_Organization.cshtml";
}

<h2 class="text-center" style="margin-left:20px;font-family:'Bookman Old Style'">Delete Doctor</h2>

<h3 style="margin-left:20px;font-family:'Bookman Old Style'">Are you sure you want to delete this?</h3>
<div style="margin-left:20px;font-family:'Bookman Old Style'">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("User ID")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User_Id)
        </dd>

        <dt>
            @Html.DisplayName("Doctor Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Person.First_Name) 
            @Html.DisplayFor(model => model.Person.Last_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color"  style="margin-left:20px">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
