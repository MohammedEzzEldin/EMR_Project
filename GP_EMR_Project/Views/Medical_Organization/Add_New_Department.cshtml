@model GP_EMR_Project.Models.Department

@{
    ViewBag.Title = "Add_New_Department";
    Layout = "~/Views/Shared/_Medical_Organization.cshtml";
}


<div class="contentt">
    <h3 class="text-center">Add New Department</h3>
    <br />
    @{
        var id = new object();
        id = (long)ViewData["medical_org_id"];
    }
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Medical_Org_Id, new { @Value = id })
            <div class="row justify-content-center">
                <div class="col-6">
                    @Html.EditorFor(model => model.Department_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Department Name", maxlength = "100" } })
                    @Html.ValidationMessageFor(model => model.Department_Name, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </div>
        }
        <hr class="container" color="#0033FF" />

    </div>
</div>