        @Html.Label("Confirm Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("Confirm_Password", new { htmlAttributes = new { @class = "form-control", type = "password" } })
            @Html.ValidationMessage("Confirm_Password", "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Person.User.City, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Person.User.City, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Person.User.City, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
