@model GP_EMR_Project.Models.Doctor

@{
    ViewBag.Title = "Edit_Doctor";
    Layout = "~/Views/Shared/_Medical_Organization.cshtml";
}

<h2 class="text-center" style="font-family:'Bookman Old Style'">Edit Doctor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.Doctor_Id)

<div class="form-horizontal" style="font-family:'Bookman Old Style';margin-left:10px">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Doctor First Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Person.First_Name, new { htmlAttributes = new { @class = "form-control",maxlength="100",required=true } })
            @Html.ValidationMessageFor(model => model.Person.First_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("Doctor Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Person.Last_Name, new { htmlAttributes = new { @class = "form-control",maxlength="100",required=true } })
            @Html.ValidationMessageFor(model => model.Person.Last_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Person.User.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Person.User.Email.Split(' ')[0], new { htmlAttributes = new { @class = "form-control", type = "email",maxlength="100",required=true } })
            @Html.ValidationMessageFor(model => model.Person.User.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
  
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Person.User.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Person.User.Phone, new { htmlAttributes = new { @class = "form-control",maxlength="15" } })
            @Html.ValidationMessageFor(model => model.Person.User.Phone, "", new { @class = "text-danger" })
        </div>
    </div>
  
    <hr />
    <div class="form-group">
        @Html.Label("Gender", htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="col-md-10">
        @Html.DropDownListFor(model =>model.Person.Gender,
                                 new SelectList( new List<SelectListItem>{
                                 new SelectListItem{Value = "male",  Text = "Male" },
                                 new SelectListItem{Value = "female",  Text = "Female" },
                                 new SelectListItem{Value=Model.Person.Gender,Text="Your is "+Model.Person.Gender,Selected=true}
                                 }, "value", "text"), "Gender", new { @class = "form-control",required=true})
        @Html.ValidationMessageFor(model => model.Person.Gender, "", new { @class = "text-danger" })
    </div>

    <hr />
    <div class="form-group">
        <label style="font-weight:bold;" class="control-label col-md-2">Birth Date</label>
        <div class="col-md-10">
            <label style="color:blue; font-weight:bold">Day :</label>
            @Html.EditorFor(model => model.Person.Birth_Date.Day, new { htmlAttributes = new { type = "number", style = "color:blue;text-align:center;" } })
            @Html.ValidationMessageFor(model => model.Person.Birth_Date.Day, "", new { @class = "text-danger" })
            <label style="color:green; font-weight:bold">Month :</label>
            @Html.EditorFor(model => model.Person.Birth_Date.Month, new { htmlAttributes = new { type = "number", style = "color:green;text-align:center;" } })
            @Html.ValidationMessageFor(model => model.Person.Birth_Date.Month, "", new { @class = "text-danger" })
            <label style="color:red; font-weight:bold">Year :</label>
            @Html.EditorFor(model => model.Person.Birth_Date.Year, new { htmlAttributes = new { type = "number", style = "color:red; text-align:center;" } })
            @Html.ValidationMessageFor(model => model.Person.Birth_Date.Year, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Person.Nationality, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Person.Nationality, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Person.Nationality, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("National ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Person.National_Id, new { htmlAttributes = new { @class = "form-control",type="number",required=true } })
            @Html.ValidationMessageFor(model => model.Person.National_Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("Academic Degree", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Acadimic_Degree, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Acadimic_Degree, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("Functional Degree", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Functional_Degree, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Functional_Degree, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Spacialization, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Spacialization, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Spacialization, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
  
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
