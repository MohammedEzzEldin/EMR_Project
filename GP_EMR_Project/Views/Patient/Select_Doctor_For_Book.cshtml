
@{
    ViewBag.Title = "Select Doctor";
    Layout = "~/Views/Shared/_Patient.cshtml";
}


<br />
<h2 style="text-align:center;color:gray">Select Doctor</h2>
<hr />


<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Final_Booking", "Patient", FormMethod.Get, new { style = "text-align:center" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.Hidden("Patient_Id", (long)ViewBag.Patient_Id)
            <div class="row" style="margin-left:25% ">
                <div class="col-md-8 col-6">
                    @Html.DropDownList("Doctor", (SelectList)ViewBag.Doctors, "Doctor", new { @class = "form-control", style = "text-align:center;font-weight:bold",required = true })
                    @Html.ValidationMessage("Doctor", "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="row" style="margin-left:16%;">
                <div class="col-md-8 col-6">
                    <button type="submit" class="btn btn-primary btn-lg"> Next </button>
                </div>
            </div>
        }
    </div>
</div>
<br />
<br />


