@{
    /**/

    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_Patient.cshtml";
}

<br />
<h2 style="text-align:center;color:gray">Book</h2>
<hr />
<!--ViewBag.Cities-->

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Book", "Patient", FormMethod.Post, new { style = "text-align:center" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row" style="margin-left:25% ">
                <div class="col-md-8 col-6">
                    @Html.Editor("Search", new { htmlAttributes = new { @class = "form-control", type = "search", maxlength = "100", placeholder = "Search by name", style = "text-align:center;",required=true } })
                    @Html.ValidationMessage("Search", "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="row" style="margin-left:25% ">
                <div class="col-md-8 col-6">
                    @Html.DropDownList("Cities", (SelectList)ViewBag.Cities, "City", new { @class = "form-control",style= "text-align:center;font-weight:bold" })
                    @Html.ValidationMessage("Cities", "", new { @class = "text-danger" })
                </div>
            </div>

            // more filters
            <hr />
            <div class="row" style="margin-left:16%;">
                <div class="col-md-8 col-6">
                    <button type="submit" class="btn btn-primary btn-lg"> Next </button>
                </div>
            </div>
        }
    </div>
</div>
<br />
<br />
