@model GP_EMR_Project.Models.Patient

@{
    ViewBag.Title = "Manage_Account";
    Layout = "~/Views/Shared/_Patient.cshtml";
}

<div class="container u" style="margin-left :10%">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-body">
                    <div class="card-title ">
                        <div class="d-flex justify-content-start">
                            <div class="image-container">
                                @{
                                    var src = "";
                                    try
                                    {
                                        src = Model.Person.User.Photo_Url.Split(' ')[0];
                                    }
                                    catch (Exception ex)
                                    {
                                        src = "~/Content/MainPageBootstrap/pic/c3-healthcare-logo-md.png";
                                    }
                                }
                                <img src="@Url.Content(src)" id="Your Picture" class="img-thumbnail im" style="border-radius:50%;"/>
                                <div class="middle">
                                    <input type="button" class="btn btn-secondary" id="btnChangePicture" value="Change" />
                                    <input type="file" style="display: none;" id="profilePicture" name="file" />
                                </div>
                            </div>

                            <div class="ml-auto">
                                <input type="button" class="btn btn-primary d-none" id="btnDiscard" value="Discard Changes" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <div class="nav-link active" id="basicInfo-tab" data-toggle="tab" href="#basicInfo" role="tab" aria-controls="basicInfo" aria-selected="true">Information</div>
                                </li>

                            </ul>

                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Full Name</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    <input type="text" class="form-control" id="FullMame" placeholder="Enter The FullName">
                                </div>
                            </div>
                            <hr />

                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Password</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    <input type="password" class="form-control" id="inputPassword3" placeholder="Password" autocomplete="off">
                                </div>
                            </div>
                            <hr />


                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">confirm Password</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    <input type="password" class="form-control" id="inputPassword3" placeholder="Password" autocomplete="off">
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Number</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    <input type="text" class="form-control" id="FullMame" placeholder="Enter The FullName">
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Address</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    <input type="text" class="form-control" id="FullMame" placeholder="Enter The FullName">
                                </div>
                            </div>
                            <hr />

                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-lg ">Save</button>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


