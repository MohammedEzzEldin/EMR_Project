@model IEnumerable<GP_EMR_Project.Models.Family_History>

@{
    ViewBag.Title = "Family_History";
    Layout = "~/Views/Shared/_Patient.cshtml";
}
<br />
<div class="contentt">
    <h3 class="text-center" style="color:grey">Family History</h3>
    <br />
    <div class="col-4">
        @using (Html.BeginForm("Search_In_Family_History", "Patient", FormMethod.Post, new { @class = "form-inline" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("Patient_Id",(long?) ViewBag.Patient_Id)
            <input class=" ml-auto form-control mr-sm-2" type="search" id="DiseaseName" name="DiseaseName" placeholder="Disease Name" style="text-align:center" aria-label="Search">
            <input class="btn btn-outline-success my-2 my-sm-0" value="Search" type="submit">
        }
    </div>
    <br />
    <div class="container">
        <div class="table-responsive">
            <table class=" main-table table table-bordered text-center">
                <tr>
                    <th>Disease name</th>
                    <th>Disease Type</th>
                </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Disease_Name</td>
                             <td>@item.Disease_Type</td>
                       </tr>
                    }


            </table>
            <br />
        </div>
    </div>
</div>
